!!!

%html
  %head
    %meta{'charset' => 'utf-8'}
    %meta{'http-equiv' => 'x-ua-compatible', 'content' => 'ie=edge'}

    %title= t('app_title')

    %meta{'name' => 'description', 'content' => t('app_description')}
    %meta{'name' => 'viewport', 'content' => 'width=device-width, initial-scale=1'}

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag 'modernizr'
    = csrf_meta_tags

  %body

    // include header partial
    = render 'shared/header'

    %p.notice

    // generate content for each flash message received after redirect, and style according to key
    - flash.each do |key, value|
      = content_tag :div, content_tag(:p, value), class: "#{flash_class(key)}" unless value.blank?

    // include view corresponding to action
    = yield

    // include footer partial
    = render 'shared/footer'
