.container
  .page-header
    %h1= "#{t('.title')} \"#{@vehicle.registration_number}\""

  .page-header
    %h3= t('.details')
    %p= t('.details_description')
  %p
    %b= t('.reg_number')
    = @vehicle.registration_number
  %p
    %b= t('.make')
    = @vehicle.make
  %p
    %b= t('.model')
    = @vehicle.model
  %p
    %b= t('.colour')
    = @vehicle.colour

  .page-header
    %h3= t('.bookings')
    %p= t('.bookings_description')
  = render 'shared/bookings_list'

  = link_to t('.edit'), edit_vehicle_path(@vehicle)
  \|
  = link_to t('.add'), vehicle_bookings_path(@vehicle)
  \|
  = link_to t('.back'), vehicles_path

%br
