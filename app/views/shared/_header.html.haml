%nav.navbar.navbar-inverse
  .container-fluid
    .navbar-header
      %a.navbar-brand{:href => root_path}= t('.title')
    %ul.nav.navbar-nav
      - if user_signed_in?
        %li
          %a= "#{current_user.email}"
        %li
          = link_to t('profile'), edit_user_registration_path
        %li
          = link_to t('logout'), destroy_user_session_path, method: 'delete'
      - else
        %li
          = link_to t('login'), new_user_session_path
        %li
          = link_to t('sign_up'), new_user_registration_path
      %li
        %a{:href => root_path}= t('.home')
      %li
        %a{:href => contact_path}= t('.contact')
      %li
        %a{:href => vehicles_path}= t('.vehicles')

// generate content for each flash message received after redirect, and style according to key
- flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}", class: "#{flash_class(key)}" unless value.blank?
